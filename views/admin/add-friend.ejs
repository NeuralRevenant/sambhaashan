<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body style="background: linear-gradient(to top, #ffcc99 0%, #ff99cc 100%); height:100vh">
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="centered">
            <h1 style="color: aliceblue;">Add a Friend</h1>
        </div>
        <%if(errorMsg){%>
            <div style="width: fit-content;padding: 5px 10px;margin:auto;text-align:center;max-width:80%;border:1px solid white ;background:crimson;color: white;">Error: <%=errorMsg%></div>
        <%}%>
        <form class="product-form" action="/admin/add-friend" method="POST" novalidate enctype="application/x-www-form-urlencoded" autocomplete="off">
            <div class="form-control autocomplete">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" value="<%=username%>" placeholder="Ex: Testing123">
            </div>

            <div class="form-control">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%=email%>" placeholder="Ex: testing@yahoo.com">
            </div>

            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button class="btn" type="submit" style="margin-top: 2rem;">Send Request</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>